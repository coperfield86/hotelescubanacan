<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/material_com_card_view_content_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/custom_card_elevation"
        android:layout_margin="@dimen/card_margin"
        android:clickable="true"
        android:foreground="@drawable/card_item_selector">
    <RelativeLayout
            android:id="@+id/rlCardView"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="@dimen/card_item_img_width"
                android:layout_height="@dimen/card_item_img_height"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:id="@+id/material_com_card_view_image"
                android:background="@android:color/white"/>
        <RelativeLayout
                android:id="@+id/llCardViewTexts"
                android:layout_toRightOf="@id/material_com_card_view_image"
                android:layout_toEndOf="@id/material_com_card_view_image"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTitle"
                    android:paddingLeft="@dimen/card_title_text_padding"
                    android:paddingRight="@dimen/card_title_text_padding"
                    android:textSize="@dimen/title_size"
                    android:textColor="@color/black_button"/>
            <LinearLayout
                    android:id="@+id/llStars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/card_title_text_padding"
                    android:paddingRight="@dimen/card_title_text_padding"
                    android:layout_below="@id/tvTitle">

                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/start1"
                        android:src="@drawable/star_red"
                        android:visibility="visible" android:layout_margin="0dp"/>
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/start2"
                        android:src="@drawable/star_red"
                        android:visibility="visible" android:layout_margin="0dp"/>

                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/start3"
                        android:src="@drawable/star_red"
                        android:visibility="visible" android:layout_margin="0dp"/>

                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/start4"
                        android:src="@drawable/star_red"
                        android:visibility="visible" android:layout_margin="0dp"/>

                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/start5"
                        android:src="@drawable/star_red"
                        android:visibility="visible" android:layout_margin="0dp"/>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/description_color"
                    android:textSize="@dimen/description_size"
                    android:text="@string/lorem_ipsum_short"
                    android:id="@+id/tvShortData"
                    android:paddingLeft="@dimen/card_title_text_padding"
                    android:paddingRight="@dimen/card_title_text_padding"
                    android:layout_below="@id/llStars"
                    android:singleLine="true"/>
            <RelativeLayout
                    android:id="@+id/rlPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/card_title_text_padding"
                    android:paddingRight="@dimen/card_title_text_padding"
                    android:layout_below="@id/tvShortData">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/description_color"
                        android:textSize="@dimen/description_size"
                        android:text="@string/lorem_ipsum_short"
                        android:id="@+id/tvSubtitle1"
                        android:singleLine="true"
                        android:gravity="right"
                        android:layout_alignBottom="@+id/tvSubtitle2"
                        android:layout_toLeftOf="@+id/tvSubtitle2"
                        android:layout_toStartOf="@+id/tvSubtitle2"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cubanacan_light_red"
                        android:textSize="@dimen/title_size"
                        android:text="@string/lorem_ipsum_short"
                        android:id="@+id/tvSubtitle2"
                        android:layout_gravity="right"
                        android:singleLine="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>