<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rlContent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
    <android.support.v7.widget.Toolbar
            android:id="@+id/screen_default_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cubanacan_light_blue"
            android:minHeight="?attr/actionBarSize"
            tools:context=".ToolBar">
        <TextView
                android:id="@+id/tvToolBar"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cvAPagar"
            android:layout_below="@id/screen_default_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
        <RelativeLayout
                android:id="@+id/rlAPagar"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center">
            <TextView
                    android:id="@+id/tvAPagarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:text="@string/to_pay"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:id="@+id/tvAPagar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem_number"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:padding="10dp"
                    android:layout_toEndOf="@id/tvAPagarTitle"
                    android:layout_toRightOf="@id/tvAPagarTitle"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cvRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/tvHabitacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/room_lorem"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>
            <LinearLayout
                    android:id="@+id/llOpciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <android.support.v7.widget.CardView
                        android:id="@+id/cvLoremOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/custom_card_elevation"
                        android:layout_margin="@dimen/card_margin"
                        android:padding="10dp"
                        android:clickable="true"
                        android:foreground="@drawable/card_item_selector">
                    <RelativeLayout
                            android:id="@+id/rlLoremOne"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:layout_width="@dimen/card_item_img_width"
                                android:layout_height="@dimen/card_item_img_height"
                                android:contentDescription="@null"
                                android:scaleType="centerCrop"
                                android:id="@+id/ivLoremOne"
                                android:layout_centerVertical="true"
                                android:background="@android:color/white"/>
                        <CheckBox
                                android:id="@+id/cbRoom1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"/>
                        <RelativeLayout
                                android:id="@+id/rlTexts"
                                android:layout_toRightOf="@id/ivLoremOne"
                                android:layout_toEndOf="@id/ivLoremOne"
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_toLeftOf="@id/cbRoom1"
                                android:layout_toStartOf="@id/cbRoom1">
                            <TextView
                                    android:id="@+id/tvTitleOne"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/card_title_text_padding"
                                    android:paddingLeft="@dimen/card_title_text_padding"
                                    android:paddingRight="@dimen/card_title_text_padding"
                                    android:paddingBottom="@dimen/card_title_text_padding_bottom"
                                    android:textSize="@dimen/title_size"
                                    android:textColor="@color/black_button"/>
                            <TextView
                                    android:id="@+id/tvSubTitleOne"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/description_color"
                                    android:textSize="@dimen/description_size"
                                    android:text="@string/lorem_ipsum_short"
                                    android:paddingLeft="@dimen/card_title_text_padding"
                                    android:paddingBottom="@dimen/big_padding"
                                    android:paddingRight="@dimen/big_padding"
                                    android:layout_below="@id/tvTitleOne"
                                    android:singleLine="true"/>
                            <android.support.v7.widget.AppCompatButton
                                    android:id="@+id/btnSetOpcion1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/lorem_opcion"
                                    android:textColor="@android:color/black"
                                    android:layout_marginTop="10dp"
                                    android:padding="10dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_below="@id/tvSubTitleOne"
                                    android:gravity="center"/>
                            <android.support.v7.widget.AppCompatButton
                                    android:id="@+id/btnSetOpcion2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/lorem_opcion"
                                    android:textColor="@android:color/black"
                                    android:layout_marginTop="10dp"
                                    android:padding="10dp"
                                    android:layout_toRightOf="@id/btnSetOpcion1"
                                    android:layout_toEndOf="@id/btnSetOpcion1"
                                    android:layout_below="@id/tvSubTitleOne"
                                    android:gravity="center"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>