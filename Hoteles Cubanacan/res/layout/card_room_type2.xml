<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cvLoremOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/custom_card_elevation"
        android:layout_margin="@dimen/card_margin"
        android:padding="10dp"
        android:clickable="true"
        android:foreground="@drawable/card_item_selector">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/card_item_img_height"
                android:layout_weight="2"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:id="@+id/ivLoremOne"
                android:background="@android:color/white"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvTitleOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/card_title_text_padding"
                    android:paddingBottom="@dimen/card_title_text_padding_bottom"
                    android:textSize="@dimen/title_size"
                    android:textColor="@color/black_button"/>
            <TextView
                    android:id="@+id/tvSubTitleOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/description_color"
                    android:textSize="@dimen/description_size"
                    android:text="@string/lorem_ipsum_short"
                    android:gravity="right"
                    android:singleLine="true"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btnMealPlan"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="@string/lorem_two"
                        android:textColor="@android:color/black"/>

                <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btnOptionalServices"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="AAA"
                        android:textColor="@android:color/black"/>

            </LinearLayout>
        </LinearLayout>

        <CheckBox
                android:id="@+id/cbRoom1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/secondary_color_blue"
                android:layout_margin="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:layout_gravity="center_vertical"/>

    </LinearLayout>
</android.support.v7.widget.CardView>