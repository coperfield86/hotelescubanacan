<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cvLoremOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/custom_card_elevation"
        android:foreground="@drawable/card_item_selector">
    <RelativeLayout
            android:id="@+id/rlLoremOne"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="@dimen/card_item_img_width"
                android:layout_height="@dimen/card_item_img_height"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:id="@+id/ivRoomImage"
                android:background="@android:color/white" android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
        <CheckBox
                android:id="@+id/cbRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/secondary_color_blue"
                android:layout_margin="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        <RelativeLayout
                android:id="@+id/rlTexts"
                android:layout_toRightOf="@id/ivRoomImage"
                android:layout_toEndOf="@id/ivRoomImage"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@id/cbRoom"
                android:layout_toStartOf="@id/cbRoom">
            <TextView
                    android:id="@+id/tvTitleOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/card_title_text_padding"
                    android:paddingLeft="@dimen/card_title_text_padding"
                    android:paddingRight="@dimen/card_title_text_padding"
                    android:paddingBottom="@dimen/card_title_text_padding_bottom"
                    android:textSize="@dimen/title_size"
                    android:textColor="@color/black_button"/>
            <TextView
                    android:id="@+id/tvSubTitleOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cubanacan_light_red"
                    android:textSize="@dimen/description_size"
                    android:text="@string/lorem_ipsum_short"
                    android:paddingLeft="@dimen/card_title_text_padding"
                    android:paddingBottom="@dimen/big_padding"
                    android:paddingRight="@dimen/big_padding"
                    android:layout_below="@id/tvTitleOne"
                    android:singleLine="true"
                    android:gravity="right"/>
            <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnSetOpcion1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem_one"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/tvSubTitleOne"
                    android:gravity="center"/>
            <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnSetOpcion2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/opcionales"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:layout_toRightOf="@id/btnSetOpcion1"
                    android:layout_toEndOf="@id/btnSetOpcion1"
                    android:layout_below="@id/tvSubTitleOne"
                    android:gravity="center"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>