<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/material_com_card_view_content_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/custom_card_elevation"
        android:layout_margin="@dimen/card_margin"
        android:clickable="true"
        android:foreground="@drawable/card_item_selector">
    <RelativeLayout
            android:id="@+id/rlCardView"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="@dimen/card_item_img_width"
                android:layout_height="@dimen/card_item_img_height"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:id="@+id/material_com_card_view_image"
                android:background="@android:color/white"/>
        <RelativeLayout
                android:id="@+id/llCardViewTexts"
                android:layout_toRightOf="@id/material_com_card_view_image"
                android:layout_toEndOf="@id/material_com_card_view_image"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTitle"
                    android:paddingTop="@dimen/card_title_text_padding"
                    android:paddingLeft="@dimen/card_title_text_padding"
                    android:paddingRight="@dimen/card_title_text_padding"
                    android:paddingBottom="@dimen/card_title_text_padding_bottom"
                    android:textSize="@dimen/title_size"
                    android:textColor="@color/black_button"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/description_color"
                    android:textSize="@dimen/description_size"
                    android:text="@string/lorem_ipsum_short"
                    android:id="@+id/rbCategory"
                    android:paddingLeft="@dimen/card_title_text_padding"
                    android:paddingTop="@dimen/big_padding"
                    android:paddingBottom="@dimen/big_padding"
                    android:paddingRight="@dimen/big_padding"
                    android:layout_below="@id/tvTitle"
                    android:singleLine="true"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>